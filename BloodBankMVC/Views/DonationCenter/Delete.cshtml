@model BloodBank.Models.DonationCenter

<h2>Delete Donation Center: @Model.Area</h2>

<p>Are you sure you want to delete this donation center?</p>

<form method="post" asp-action="ConfirmDelete" asp-route-id="@Model.Id">
    <button type="submit">Delete</button>
</form>

<a href="@Url.Action("Index")">Cancel</a>
